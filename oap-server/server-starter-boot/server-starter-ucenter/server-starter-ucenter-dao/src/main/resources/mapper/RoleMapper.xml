        <include refid="selectRoleVo"/>
        where r.del_flag = '0'
        <if test="roleName != null and roleName != ''">
            AND upper(r.role_name) like concat('%', upper(#{roleName}), '%')
        </if>
        <if test="status != null and status != ''">
            AND r.status = #{status}
        </if>
        <if test="roleKey != null and roleKey != ''">
            AND upper(r.role_key) like concat('%', upper(#{roleKey}), '%')
        </if>
        <if test="paramt.beginTime != null and paramt.beginTime != ''"><!-- 开始时间检索 -->
            and r.create_time &gt;= #{paramt.beginTime}
        </if>
        <if test="paramt.endTime != null and paramt.endTime != ''"><!-- 结束时间检索 -->
            and r.create_time &lt;= #{paramt.endTime}
        </if>
        ORDER by r.role_sort asc
        <!-- 数据范围过滤 -->
    </select>

