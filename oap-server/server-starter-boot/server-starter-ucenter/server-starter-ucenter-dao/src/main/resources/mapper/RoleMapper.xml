    <sql id="selectRoleVo">
	    select distinct r.id, r.role_name, r.role_key, r.role_sort, r.data_scope,
            r.status, r.del_flag, r.create_time, r.remark
        from t_sod_role r
	        left join t_sod_user_role ur on ur.role_id = r.id
	        left join t_sod_user u on u.id = ur.user_id
	        left join t_sod_dept d on u.dept_id = d.id
